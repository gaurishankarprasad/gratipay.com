teams = website.db.all("""

    SELECT teams.*::teams
      FROM teams
  ORDER BY ctime DESC

""")
nteams = len(teams)
title = _("Explore")
subhead = _("Teams")

[-----------------------------] text/html
{% extends "templates/explore.html" %}

{% block content %}
<h2>{{ _("Teams (N={0})", nteams) }}</h2>
<table class="table">
    <tr>
        <th>{{ _("Name") }}</th>
        <th>{{ _("Owner") }}</th>
        <th>{{ _("Status") }}</th>
    </tr>
    {% for team in teams %}
    <tr>
        <td><a href="/{{ team.slug }}/">{{ team.name }}</a></td>
        <td><a href="/{{ team.owner }}/">{{ team.owner }}</a></td>
        <td>{{ team.status }}</td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
